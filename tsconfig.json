{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["esnext", "dom"],
    "types": ["cypress"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["src", "example"],
  "exclude": ["node_modules", "dist"]
}
