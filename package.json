{
  "name": "cypress-vite",
  "version": "1.6.0",
  "description": "Run Cypress specs using Vite",
  "author": "Mohammad Ataei",
  "license": "MIT",
  "keywords": [
    "cypress",
    "cypress-plugin",
    "cypress-preprocessor",
    "vite"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mammadataei/cypress-vite/"
  },
  "bugs": {
    "url": "https://github.com/mammadataei/cypress-vite/issues"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "example": "pnpm --filter example",
    "test": "pnpm --filter example test",
    "format": "prettier --write . && pnpm lint --fix",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --fix",
    "*.{js,jsx,ts,tsx,md,html,css}": "prettier --write"
  },
  "peerDependencies": {
    "vite": "^2.9.0 || ^3.0.0 || ^4.0.0 || ^5.0.0 || ^6.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/debug": "^4.1.12",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "cypress": "^13.17.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "unbuild": "^3.0.0",
    "vite": "^6.0.3"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "debug": "^4.3.4"
  }
}
