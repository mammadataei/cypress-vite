{
  "name": "cypress-vite",
  "version": "1.0.2",
  "description": "Run Cypress specs using Vite",
  "author": "Mohammad Ataei",
  "license": "MIT",
  "keywords": [
    "cypress",
    "cypress-plugin",
    "cypress-preprocessor",
    "vite"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mammadataei/cypress-vite/"
  },
  "bugs": {
    "url": "https://github.com/mammadataei/cypress-vite/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "example": "pnpm --filter example",
    "test": "pnpm --filter example test",
    "format": "prettier --write . && pnpm lint --fix",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --fix",
    "*.{js,jsx,ts,tsx,md,html,css}": "prettier --write"
  },
  "peerDependencies": {
    "vite": "^2.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "cypress": "^10.4.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.6.2",
    "rollup": "^2.77.2",
    "tsup": "^6.2.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.5"
  }
}
